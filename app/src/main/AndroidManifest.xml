<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brainants.bsccsit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_DOWNLOAD_COMPLETED_INTENTS" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="com.brainants.bsccsit.advance.MyApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.brainants.bsccsit.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="bsccsit"
                    android:pathPrefix="/main"
                    android:scheme="brainants" />

            </intent-filter>
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="com.brainants.bsccsit.activities.CompleteLogin"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name="com.brainants.bsccsit.activities.Settings"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.brainants.bsccsit.activities.ImageViewActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.FullScreen" />

        <activity
            android:name="com.brainants.bsccsit.activities.EachPost"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="bsccsit"
                    android:pathPrefix="/eachpost"
                    android:scheme="brainants" />

            </intent-filter>
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="9cfaedb2af986a27f7bd621e43ec9f21adaf8e68" />

        <activity
            android:name="com.brainants.bsccsit.activities.FbPage"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/page"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.AboutUs"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/about"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.admin.AdminPanel"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />

        <service
            android:name="com.brainants.bsccsit.advance.BackgroundTaskHandler"
            android:exported="true"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY" />
            </intent-filter>
        </service>

        <activity
            android:name="com.brainants.bsccsit.activities.FbEvent"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/event"
                android:scheme="brainants" />
        </activity>

        <receiver android:name="com.brainants.bsccsit.fragments.eLibraryPagerFragment$Receiver">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_DOWNLOAD_COMPLETE" />
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
                <action android:name="android.intent.action.DOWNLOAD_NOTIFICATION_CLICKED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.brainants.bsccsit.activities.AddProject"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize">

            <data
                android:host="bsccsit"
                android:pathPrefix="/addproject"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.NoticeDetails"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <data
                android:host="bsccsit"
                android:pathPrefix="/notice"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.EachProject"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <data
                android:host="bsccsit"
                android:pathPrefix="/eachproject"
                android:scheme="brainants" />
        </activity>
        <activity
            android:name="com.brainants.bsccsit.activities.UserProfile"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/profile"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.EachProjectAdmin"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/admineachproject"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.Notification"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/notification"
                android:scheme="brainants" />
        </activity>

        <activity
            android:name="com.brainants.bsccsit.activities.ProjectByTag"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">

            <data
                android:host="bsccsit"
                android:pathPrefix="/projectbytag"
                android:scheme="brainants" />
        </activity>
    </application>

</manifest>
