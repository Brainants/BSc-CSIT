<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techies.bsccsit.activities.ImageViewActivity">
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imageViewerImage"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/gradient_black"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/decsOfImage"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Description of the text."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:id="@+id/commentNlike"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/like"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="21"
                    android:id="@+id/likeNo"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/comment"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="12"
                    android:id="@+id/commentNo"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>
